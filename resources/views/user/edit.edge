                        <textarea class="form-control" rows="3" name="alamat" placeholder="Alamat Anda">{{ user.alamat }}</textarea>
                      </div>
                      <div class="form-group">
                        <label for="jabatan">Status</label>
                        <select class="form-control" name="status" value="{{ user.status }}">
