                        </select>
                      </div>
                      <div class="form-group">
                        <label for="nama">Nama</label>
                        <input type="text" class="form-control" id="nama" name="nama" value="{{ user.nama }}" placeholder="Nama lengkap Anda">
                      </div>
                      <div class="form-group">
                        <label for="nrp">NRP (Nomor Register Pokok)</label>
                        <input type="text" class="form-control" id="nrp" name="nrp" value="{{ user.nrp }}" placeholder="NRP Anda">
                      </div>
                      <div class="form-group">
                        <label for="jabatan">Satuan</label>
                        <select class="form-control" name="satuan" value="{{ user.satuan }}">
