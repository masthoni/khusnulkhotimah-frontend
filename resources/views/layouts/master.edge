    <script>
      // dataTable Laporan SuratMasukKeluar
      var minDate, maxDate;
 
      // Custom filtering function which will search data in column four between two values
      $.fn.dataTable.ext.search.push(
        function( settings, data, dataIndex ) {
          var min = minDate.val();
          var max = maxDate.val();
          var date = new Date( data[0] );
        
          if (
            ( min === null && max === null ) ||
            ( min === null && date <= max ) ||
            ( min <= date   && max === null ) ||
            ( min <= date   && date <= max )
          ) {
            return true;
          }
            return false;
          }
        );
        
      $(document).ready(function() {
        // Create date inputs
        minDate = new DateTime($('#min'), {
          format: 'MMMM Do YYYY'
        });
        maxDate = new DateTime($('#max'), {
          format: 'MMMM Do YYYY'
        });
        
        // DataTables initialisation
        var table2 = $('#tabel').DataTable({
          lengthChange: true, autoWidt: true,
        });
        
        //var table = $('#laporan').DataTable();
        var table = $('#laporan').DataTable({
          dom: 'Bfrtip',
          lengthChange: true,
          buttons: ['excel']
        });
        
        // Refilter the table
        $('#min, #max').on('change', function () {
          table.draw();
        });
      });
    </script>

