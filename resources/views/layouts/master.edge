      // InputMasking NoSurat SuratKeluar
      function getKlasifikasiTujuan() {
        var klasifikasi = document.getElementById("klasifikasiTujuan");
        var value_klasifikasiTujuan = klasifikasi.options[klasifikasi.selectedIndex].text;
        
        var klasifikasiSurat = document.getElementById("klasifikasiSurat");
        var value_klasifikasiSurat = klasifikasiSurat.options[klasifikasiSurat.selectedIndex].text;
        
        if(value_klasifikasiTujuan == 'POLRES')
          if(value_klasifikasiSurat == 'Rahasia')
            $(document).ready(function(){
              $("#noSuratSK").inputmask("R/99/A{3}/A{3}.9.99.9/9999");
            });
          else
            $(document).ready(function(){
              $("#noSuratSK").inputmask("B/99/A{3}/A{3}.9.99.9/9999");
            });
        if(value_klasifikasiTujuan == 'Lainnya')
