<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>E-Surat Polsek | Masuk</title>

        <!-- Google Font: Source Sans Pro -->
        {{ style('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback') }}
        <!-- Font Awesome -->
        {{ style('/plugins/fontawesome-free/css/all.min.css') }}
        <!-- icheck bootstrap -->
        {{ style('/plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}
        <!-- Theme style -->
        {{ style('/css/adminlte.min.css') }}
    </head>
    <body class="login-page">
        
        <div class="col-8 align-content-center">
            <!-- /.login-logo -->
            <div class="card align-items-center">
                <div class="card-body align-items-center">
                    <div class="row">
                        <div class="col-7 align-items-center">
                            <h2 class="text-center">
                                <img src="{{ assetsUrl('assets/img/logo.png') }}" width="190px" height="120px">
                            </h2>
                            <h4 class="text-center mb-3">Selamat Datang di E-Surat Polsek</h4>

                            <form action="{{ route('login.check') }}" method="POST">
                                {{ csrfField() }}
                                <div class="form-group">
                                    <label for="Username">Username</label>
                                    <input type="text" class="form-control {{ hasErrorFor('username') ? 'is-invalid' : '' }}" id="username" name="username" placeholder="Username Anda">
                                    {{ elIf('<span class="text-danger">$self</span>', getErrorFor('username'), hasErrorFor('username')) }}
                                </div>
                                <div class="form-group">
                                    <label for="Password">Password</label>
                                    <input type="password" class="form-control {{ hasErrorFor('password') ? 'is-invalid' : '' }}" id="password" name="password" placeholder="Password Anda">
                                    {{ elIf('<span class="text-danger">$self</span>', getErrorFor('password'), hasErrorFor('password')) }}
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Masuk</button>
                            </form>
                        </div>
                        <!-- /.col-4-->

                        <div class="col-5">
                            <div class="text-center">
                                <img class="img-fluid pad" src="{{ assetsUrl('assets/img/polri.png') }}" alt="Photo" width="80px" height="30px">
                            </div>
                            <p class="text-center">
                                <b style="font-size: 20px; margin-top: 30px;">
                                    Kantor Kepolisian Sektor Sukodadi
                                </b>
                            </p>
                            <img class="img-fluid pad" src="{{ assetsUrl('assets/img/vector-login.png') }}" alt="Photo">
                        </div>
                        <!-- /.col-5 -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>

        <!-- jQuery -->
        {{ script('plugins/jquery/jquery.min.js') }}

        <!-- Bootstrap 4 -->
        {{ script('plugins/bootstrap/js/bootstrap.bundle.min.js') }}
        
        <!-- AdminLTE App -->
        {{ script('dist/js/adminlte.min.js')}}
    </body>
</html>